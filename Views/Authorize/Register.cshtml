<div class="Authorize">
    <div class="login-container fade-in">
        <div class="login-logo">Компания</div>
        <form class="login-form" id="loginForm" asp-controller="Authorize" asp-action="Register" method="post">
            <div class="form-group">
                <label asp-for="Email">Email</label>
                <input asp-for="Email" required>
                <span asp-validation-for="Email"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password">Пароль</label>
                <input asp-for="Password" required>
                <span asp-validation-for="Password"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword">Подтвердите пароль</label>
                <input asp-for="ConfirmPassword" required>
                <span asp-validation-for="ConfirmPassword"></span>
            </div>
            <button type="submit" class="login-btn">Зарегестрировать</button>
        </form>
    </div>
</div>